{
  "manifest_version": 3,
  "name": "Youtube Movies",
  "description": "watch movies in Youtube",
  "version": "0.0.1",
  "action": {
    "deafult_title": "Show Popup",
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*.youtube.com/*"],
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background.js",
    "matches": ["https://*.youtube.com/*"]
  }
}
